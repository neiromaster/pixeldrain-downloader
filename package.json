{
  "name": "pixeldrain-downloader",
  "version": "0.0.1",
  "description": "CLI tool for downloading files from PixelDrain",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "pixeldrain-downloader": "./dist/index.js"
  },
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "lint": "biome check . && dprint check",
    "format": "biome check --write --unsafe . && dprint fmt",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "^1.3.8",
    "dprint": "^0.51.1",
    "lefthook": "^2.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist"
  ]
}
