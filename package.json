{
  "name": "pixeldrain-downloader",
  "version": "0.0.1",
  "description": "CLI tool for downloading files from PixelDrain with automatic retry logic and speed monitoring",
  "author": "Maxim (neiromaster) Gavrilenko",
  "license": "MIT",
  "homepage": "https://github.com/neiromaster/pixeldrain-downloader",
  "repository": {
    "type": "git",
    "url": "https://github.com/neiromaster/pixeldrain-downloader.git"
  },
  "bugs": {
    "url": "https://github.com/neiromaster/pixeldrain-downloader/issues"
  },
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "pixeldrain-downloader": "dist/index.js"
  },
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "pixeldrain",
    "downloader",
    "cli",
    "file-download",
    "speed-monitoring"
  ],
  "scripts": {
    "build": "tsup",
    "start": "bun run src/index.ts",
    "lint": "biome check . && dprint check",
    "format": "biome check --write --unsafe . && dprint fmt",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests specified yet'",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "^1.3.8",
    "dprint": "^0.51.1",
    "lefthook": "^2.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "config.json.example"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
